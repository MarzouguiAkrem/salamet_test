                                    <field name="alerte" invisible="1"/>
                                </list>
                                <form>
                                    <sheet>
                                        <div class="alert alert-danger" role="alert" invisible="niveau_alerte_echo != 'urgente'">
                                            <strong>üö® ALERTE √âCHOGRAPHIQUE</strong>
                                            <p>Cette √©chographie n√©cessite une attention m√©dicale urgente.</p>
                                        </div>

