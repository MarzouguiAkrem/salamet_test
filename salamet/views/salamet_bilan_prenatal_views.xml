                            class="oe_highlight" invisible="state in ['termine', 'interprete']"/>
                    <button name="action_interpreter" type="object" string="Interpr√©ter"
                            class="btn-primary" invisible="state != 'termine'"/>
                    <field name="state" widget="statusbar"
