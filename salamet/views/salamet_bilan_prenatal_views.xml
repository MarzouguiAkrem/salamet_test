                                                    </group>
                                                </group>
                                            </page>

                                            <!-- Page Doppler -->
                                            <page string="Doppler" name="doppler">
                                                <group>
                                                    <field name="doppler_realise"/>
                                                </group>

                                                <group invisible="not doppler_realise">
