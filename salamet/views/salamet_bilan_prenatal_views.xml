                                <list editable="bottom">
                                    <field name="date_echo"/>
                                    <field name="terme_echo"/>
                                    <field name="type_echo"/>
                                    <field name="lcc"/>
                                    <field name="cn"/>
                                    <field name="bip"/>
                                    <field name="lf"/>
                                    <field name="efw"/>
                                    <field name="presentation"/>
