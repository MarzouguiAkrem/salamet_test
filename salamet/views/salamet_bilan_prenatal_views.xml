                    </group>

                    <notebook>
                        <!-- Page Examens Biologiques -->
<!-- Remplacer la page "Examens Biologiques" par ces deux pages s√©par√©es -->

<!-- Page H√©matologie -->
<page string="H√©matologie" name="hematologie">
