    </field>
</page>


                        <!-- Page S√©rologies MODIFI√âE -->
<page string="S√©rologies" name="serologies">
    <field name="serologie_ids" nolabel="1">
        <list editable="bottom">
            <field name="date_examen"/>
            <field name="type_serologie" required="1"/>
            <field name="resultat" required="1"/>
            <field name="valeur_numerique"/>
            <field name="unite"/>
            <field name="valeurs_reference"/>
