<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- =================== VUES BILAN PR√âNATAL =================== -->

    <!-- Vue Liste des Bilans Pr√©nataux -->
    <record id="view_salamet_bilan_prenatal_tree" model="ir.ui.view">
        <field name="name">salamet.bilan.prenatal.tree</field>
        <field name="model">salamet.bilan.prenatal</field>
        <field name="arch" type="xml">
            <list string="Bilans Pr√©nataux" create="true" edit="true" delete="true"
                  decoration-warning="state == 'prescrit'"
                  decoration-info="state == 'en_cours'"
                  decoration-success="state == 'termine'"
                  decoration-danger="alerte_active == True">
                <field name="name"/>
                <field name="grossesse_id"/>
                <field name="patiente_id"/>
                <field name="medecin_id"/>
                <field name="date_bilan"/>
                <field name="terme_grossesse"/>
                <field name="trimestre"/>
                <field name="type_bilan"/>
                <field name="state" widget="badge"
                       decoration-warning="state == 'prescrit'"
                       decoration-info="state in ['en_cours', 'termine']"
                       decoration-success="state == 'interprete'"
                       decoration-danger="state == 'alerte'"/>
                <field name="alerte_active" invisible="1"/>
                <field name="resultats_normaux" widget="boolean_toggle"/>
                <field name="niveau_alerte" widget="badge"
                       decoration-success="niveau_alerte == 'aucune'"
                       decoration-warning="niveau_alerte == 'surveillance'"
                       decoration-danger="niveau_alerte == 'urgence'"/>
            </list>
        </field>
    </record>

    <!-- Vue Formulaire Bilan Pr√©natal -->
    <record id="view_salamet_bilan_prenatal_form" model="ir.ui.view">
        <field name="name">salamet.bilan.prenatal.form</field>
        <field name="model">salamet.bilan.prenatal</field>
        <field name="arch" type="xml">
            <form string="Bilan Pr√©natal">
