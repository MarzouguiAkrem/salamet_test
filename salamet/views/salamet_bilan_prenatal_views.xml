    <!-- Vue Kanban Bilan Pr√©natal -->
    <record id="view_salamet_bilan_prenatal_kanban" model="ir.ui.view">
        <field name="name">salamet.bilan.prenatal.kanban</field>
        <field name="model">salamet.bilan.prenatal</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="patiente_id"/>
                <field name="date_bilan"/>
                <field name="terme_grossesse"/>
                <field name="trimestre"/>
                <field name="type_bilan"/>
                <field name="state"/>
                <field name="alerte_active"/>
                <field name="niveau_alerte"/>
                <field name="resultats_normaux"/>
                <field name="depistage_aneuploidies"/>
                <field name="risque_aneuploidies"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                            <span t-if="record.alerte_active.raw_value"
                                                  class="badge badge-danger ml-2">‚ö†Ô∏è</span>
