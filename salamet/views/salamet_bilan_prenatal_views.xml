                   decoration-success="anomalie_hematologie == 'normal'"
                   decoration-warning="anomalie_hematologie == 'limite'"
                   decoration-danger="anomalie_hematologie == 'anormal'"/>
            <field name="commentaire_hematologie"/>
        </list>
    </field>
</page>

<!-- Page Biochimie -->
<page string="Biochimie" name="biochimie">
    <field name="biochimie_ids" nolabel="1">
        <list editable="bottom">
            <field name="date_examen"/>
            <field name="glycemie"/>
            <field name="hgpo"/>
            <field name="proteinurie"/>
            <field name="anomalie_biochimie" widget="badge"
