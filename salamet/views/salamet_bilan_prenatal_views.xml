                    <group name="info_serologie" string="Informations g√©n√©rales">
                        <field name="date_examen" required="1"/>
                        <field name="type_serologie" required="1"/>
                        <field name="resultat" required="1"/>
                    </group>
                    <group name="valeurs" string="Valeurs">
