<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue formulaire grossesse AM√âLIOR√âE -->
        <record id="view_salamet_grossesse_form" model="ir.ui.view">
            <field name="name">salamet.grossesse.form</field>
            <field name="model">salamet.grossesse</field>
            <field name="arch" type="xml">
                <form string="Suivi de Grossesse SALAMET">
                    <header>
                        <field name="state" widget="statusbar"
                               statusbar_visible="en_cours,a_risque,terminee,interrompue"/>

                        <!-- Boutons d'action -->
                        <button name="action_nouvelle_consultation" type="object"
                                string="Nouvelle Consultation" class="btn-primary"
                                invisible="state not in ['en_cours', 'a_risque']"/>
                        <button name="action_nouveau_bilan" type="object"
                                string="Nouveau Bilan" class="btn-secondary"
                                invisible="state not in ['en_cours', 'a_risque']"/>
                        <button name="action_generer_notifications_surveillance" type="object"
                                string="G√©n√©rer Surveillance" class="btn-warning"
                                invisible="type_pathologie_principale == 'normale'"/>
                        <button name="action_marquer_a_risque" type="object"
                                string="Marquer √† Risque" class="btn-danger"
                                invisible="state != 'en_cours'"/>
                    </header>

                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!-- Smart buttons -->
                            <button name="action_view_consultations" type="object"
                                    class="oe_stat_button" icon="fa-stethoscope">
                                <field name="nombre_consultations" widget="statinfo"
                                       string="Consultations"/>
                            </button>
                            <button name="action_view_bilans" type="object"
                                    class="oe_stat_button" icon="fa-flask">
                                <field name="nombre_bilans" widget="statinfo"
                                       string="Bilans"/>
                            </button>
                            <button class="oe_stat_button" icon="fa-exclamation-triangle">
                                <field name="niveau_risque" widget="statinfo" string="Niveau Risque"/>
                            </button>
                        </div>

                        <!-- En-t√™te avec informations principales -->
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                            <h2>
                                <label for="patiente_id" string="Patiente : "/>
                                <field name="patiente_id"
                                       readonly="id != False"
                                       options="{'no_create': True}"/>
                            </h2>
                            <div class="o_row">
                                <span invisible="type_pathologie_principale == 'normale'"
                                      class="badge badge-warning">
                                    üè• <field name="type_pathologie_principale"/>
                                </span>
                                <span invisible="niveau_risque != 'tres_eleve'"
                                      class="badge badge-danger">
                                    ‚ö†Ô∏è Tr√®s haut risque
                                </span>
                                <span invisible="niveau_risque != 'eleve'"
                                      class="badge badge-warning">
                                    ‚ö†Ô∏è Haut risque
                                </span>
                                <span invisible="not tag_display"
                                      class="badge badge-info">
                                </span>
                            </div>
                        </div>

                        <notebook>
                            <!-- ONGLET 1: INFORMATIONS G√âN√âRALES -->
                            <page string="üìã Informations G√©n√©rales" name="general_info">
                                <group>
                                    <group string="üìÖ Dates et calculs">
                                        <field name="ddr" required="1"/>
                                        <field name="date_debut" readonly="1"/>
                                        <field name="tag_display" readonly="1"/>
                                        <field name="date_prevue_accouchement" readonly="1"/>
                                        <field name="terme_actuel" readonly="1"/>
                                    </group>
                                    <group string="üë®‚Äç‚öïÔ∏è Suivi M√©dical">
                                                                                <field name="medecin_referent_id"
                                               options="{'no_create': True}"/>
                                        <field name="medecin_ids" widget="many2many_tags"/>
                                        <field name="derniere_consultation" readonly="1"/>
                                        <field name="active"/>
                                    </group>
                                </group>
                            </page>

                            <!-- ONGLET 2: PATHOLOGIES ET RISQUES -->
                            <page string="üè• Pathologies et Risques" name="pathologies">
                                <group>
                                    <group string="üéØ Pathologie principale">
                                        <field name="type_pathologie_principale"/>
                                    </group>
                                    <group string="üíä Traitement">
                                        <field name="traitement_pathologie"/>
                                        <field name="traitement_grossesse"/>
                                    </group>
                                </group>

                                <group string="üìù Diagnostic et justification">
                                    <field name="diagnostic_pathologie" nolabel="1"
                                           placeholder="Pourquoi ce diagnostic ? Justification m√©dicale..."/>
                                </group>

                                <group string="üíâ D√©tails du traitement"
                                       invisible="not traitement_pathologie and not traitement_grossesse">
                                    <field name="details_traitement_pathologie" nolabel="1"
                                           placeholder="Pr√©ciser le traitement et la posologie..."/>
                                    <field name="details_traitement" nolabel="1"
                                           placeholder="Autres traitements au cours de la grossesse..."/>
                                </group>

                                <group string="ü´Å Maturation pulmonaire">
                                    <field name="maturation_pulmonaire"/>
                                    <field name="date_maturation_pulmonaire"
                                           invisible="not maturation_pulmonaire"/>
                                </group>

                                <!-- Pathologies sp√©cifiques -->
                                <group string="üè• Pathologies associ√©es">
                                    <field name="pathologie_diabete"/>
                                    <field name="pathologie_hta"/>
                                    <field name="pathologie_preeclampsie"/>
                                    <field name="pathologie_rciu"/>
                                    <field name="pathologie_autre"/>
                                    <field name="nombre_pathologies" readonly="1"/>
                                </group>

                                <group string="üìã Autres pathologies">
                                    <field name="pathologies_associees" nolabel="1"
                                           placeholder="Lister les autres pathologies associ√©es..."/>
                                </group>
                            </page>

                            <!-- ONGLET 3: DONN√âES BIOM√âTRIQUES -->
                            <page string="üìè Donn√©es Biom√©triques" name="biometric_data">
                                <group>
                                    <group string="üìä Mesures initiales">
                                        <field name="poids_avant_grossesse"/>
                                        <field name="taille"/>
                                        <field name="imc_initial" readonly="1"/>
                                    </group>
                                </group>
                            </page>

                            <!-- ONGLET 4: CONSULTATIONS -->
                            <page string="ü©∫ Consultations" name="consultations">
                                <div class="oe_button_box" name="consultation_buttons">
                                    <button name="action_nouvelle_consultation" type="object"
                                            string="‚ûï Nouvelle Consultation" class="btn-primary"
                                            invisible="state not in ['en_cours', 'a_risque']"/>
                                </div>
                                <field name="consultation_ids">
                                    <list>
                                        <field name="date_consultation"/>
                                        <field name="terme_grossesse"/>
                                        <field name="medecin_id"/>
                                        <field name="type_consultation"/>
                                        <field name="observations"/>
                                    </list>
                                </field>
                            </page>

                            <!-- ONGLET 5: BILANS PR√âNATAUX -->
                            <page string="üß™ Bilans Pr√©nataux" name="bilans">
                                <div class="oe_button_box" name="bilan_buttons">
                                    <button name="action_nouveau_bilan" type="object"
                                            string="‚ûï Nouveau Bilan" class="btn-primary"
                                            invisible="state not in ['en_cours', 'a_risque']"/>
                                </div>
                                <field name="bilan_prenatal_ids">
                                    <list>
                                        <field name="date_bilan"/>
                                        <field name="terme_grossesse"/>
                                        <field name="type_bilan"/>
                                    </list>
                                </field>
                            </page>

                            <!-- ONGLET 6: NOTIFICATIONS DE SURVEILLANCE -->
                            <page string="üîî Surveillance" name="notifications">
                                <div class="oe_button_box" name="notification_buttons">
                                    <button name="action_generer_notifications_surveillance" type="object"
                                            string="üîî G√©n√©rer Surveillance" class="btn-warning"
                                            invisible="type_pathologie_principale == 'normale'"/>
                                </div>
                                <field name="notification_ids">
                                    <kanban>
                                        <field name="titre"/>
                                        <field name="date_prevue"/>
                                        <field name="priorite"/>
                                        <field name="state"/>
                                        <field name="type_notification"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_kanban_card oe_kanban_global_click">
                                                    <div class="oe_kanban_content">
                                                        <div class="o_kanban_record_top">
                                                            <div class="o_kanban_record_headings">
                                                                <strong class="o_kanban_record_title">
                                                                    <field name="titre"/>
                                                                </strong>
                                                            </div>
                                                            <div class="o_kanban_record_top_right">
                                                                <span t-if="record.priorite.raw_value == 'haute'"
                                                                      class="badge badge-danger">Haute</span>
                                                                <span t-if="record.priorite.raw_value == 'moyenne'"
                                                                      class="badge badge-warning">Moyenne</span>
                                                                <span t-if="record.priorite.raw_value == 'basse'"
                                                                      class="badge badge-info">Basse</span>
                                                            </div>
                                                        </div>
                                                        <div class="o_kanban_record_body">
                                                            <div>üìÖ <field name="date_prevue"/></div>
                                                            <div>üîî <field name="type_notification"/></div>
                                                            <div t-if="record.state.raw_value == 'en_attente'">
                                                                ‚è≥ En attente
                                                            </div>
                                                            <div t-if="record.state.raw_value == 'traitee'">
                                                                ‚úÖ Trait√©e
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>

                            <!-- ONGLET 7: NOTES ET OBSERVATIONS -->
                            <page string="üìù Notes" name="notes">
                                <group string="üìã Observations g√©n√©rales">
                                    <field name="observations" nolabel="1"
                                           placeholder="Observations g√©n√©rales sur la grossesse..."/>
                                </group>

                                <group string="üìã Notes m√©dicales">
                                    <field name="notes_medicales" nolabel="1"
                                           placeholder="Notes m√©dicales d√©taill√©es..."/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Vue liste grossesses AM√âLIOR√âE -->
        <record id="view_salamet_grossesse_tree" model="ir.ui.view">
            <field name="name">salamet.grossesse.tree</field>
            <field name="model">salamet.grossesse</field>
            <field name="arch" type="xml">
                <list string="Suivi des Grossesses"
                      decoration-success="state == 'en_cours' and type_pathologie_principale == 'normale'"
                      decoration-warning="state == 'a_risque' or niveau_risque == 'eleve'"
                      decoration-danger="niveau_risque == 'tres_eleve'"
                      decoration-muted="state in ['terminee', 'interrompue']">
                    <field name="name"/>
                    <field name="patiente_id"/>
                    <field name="ddr"/>
                    <field name="tag_display"/>
                    <field name="tag_semaines"/>
                    <field name="tag_jours"/>
                    <field name="date_prevue_accouchement"/>
                    <field name="type_pathologie_principale"/>
                    <field name="niveau_risque" widget="badge"
                           decoration-success="niveau_risque == 'faible'"
                           decoration-info="niveau_risque == 'moyen'"
                           decoration-warning="niveau_risque == 'eleve'"
                           decoration-danger="niveau_risque == 'tres_eleve'"/>
                    <field name="medecin_referent_id"/>
                    <field name="state" widget="badge"
                           decoration-success="state == 'en_cours'"
                           decoration-warning="state == 'a_risque'"
                           decoration-info="state == 'terminee'"
                           decoration-muted="state == 'interrompue'"/>
                    <field name="derniere_consultation"/>
                    <field name="nombre_consultations"/>
                    <field name="nombre_bilans"/>
                </list>
            </field>
        </record>

        <!-- Vue Kanban grossesses -->
        <record id="view_salamet_grossesse_kanban" model="ir.ui.view">
            <field name="name">salamet.grossesse.kanban</field>
            <field name="model">salamet.grossesse</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="patiente_id"/>
                    <field name="tag_display"/>
                    <field name="tag_semaines"/>
                    <field name="tag_jours"/>
                    <field name="date_prevue_accouchement"/>
                    <field name="type_pathologie_principale"/>
                    <field name="niveau_risque"/>
                    <field name="medecin_referent_id"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="patiente_id"/>
                                            </strong>
                                            <small class="o_kanban_record_subtitle text-muted">
                                                <field name="name"/>
                                            </small>
                                        </div>
                                        <div class="o_kanban_record_top_right">
                                            <span t-if="record.niveau_risque.raw_value == 'tres_eleve'"
                                                  class="badge badge-danger">‚ö†Ô∏è</span>
                                            <span t-if="record.niveau_risque.raw_value == 'eleve'"
                                                  class="badge badge-warning">‚ö†Ô∏è</span>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div>‚è±Ô∏è TAG: <t t-esc="record.tag_display.value"/></div>
                                        <div>üçº DPA: <t t-esc="record.date_prevue_accouchement.value"/></div>
                                        <div>üè• <t t-esc="record.type_pathologie_principale.value"/></div>
                                        <div t-if="record.medecin_referent_id.raw_value">
                                            üë®‚Äç‚öïÔ∏è <t t-esc="record.medecin_referent_id.value"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

