<!-- Vue recherche grossesses CORRIG√âE -->
<record id="view_salamet_grossesse_search" model="ir.ui.view">
    <field name="name">salamet.grossesse.search</field>
    <field name="model">salamet.grossesse</field>
    <field name="arch" type="xml">
        <search string="Rechercher Grossesses">
            <field name="name" string="R√©f√©rence"/>
            <field name="patiente_id" string="Patiente"/>
            <field name="medecin_referent_id" string="M√©decin r√©f√©rent"/>
            <field name="type_pathologie_principale"/>
            <field name="tag_display" string="TAG"/>

            <!-- Filtres principaux -->
            <filter string="En cours" name="en_cours"
                    domain="[('state', '=', 'en_cours')]"/>
            <filter string="√Ä risque" name="a_risque"
                    domain="[('state', '=', 'a_risque')]"/>
            <filter string="Pathologiques" name="pathologiques"
                    domain="[('type_pathologie_principale', '!=', 'normale')]"/>
            <filter string="Normales" name="normales"
                    domain="[('type_pathologie_principale', '=', 'normale')]"/>

            <separator/>

            <!-- Filtres par niveau de risque -->
            <filter string="Tr√®s haut risque" name="tres_haut_risque"
                    domain="[('niveau_risque', '=', 'tres_eleve')]"/>
            <filter string="Haut risque" name="haut_risque"
                    domain="[('niveau_risque', '=', 'eleve')]"/>
            <filter string="Risque moyen" name="risque_moyen"
                    domain="[('niveau_risque', '=', 'moyen')]"/>
            <filter string="Faible risque" name="faible_risque"
                    domain="[('niveau_risque', '=', 'faible')]"/>

            <separator/>

            <!-- Filtres par pathologie -->
            <filter string="Diab√®te" name="diabete"
                    domain="[('type_pathologie_principale', 'in', ['diabete_equilibre', 'diabete_insuline'])]"/>
            <filter string="HTA/Pr√©√©clampsie" name="hta"
                    domain="[('type_pathologie_principale', 'in', ['htac', 'htag', 'preeclampsie_legere', 'preeclampsie_moderee', 'preeclampsie_severe'])]"/>
            <filter string="RCIU" name="rciu"
                    domain="[('type_pathologie_principale', '=', 'rciu')]"/>
            <filter string="Maturation pulmonaire" name="maturation"
                    domain="[('maturation_pulmonaire', '=', True)]"/>

            <separator/>

            <!-- Filtres par terme CORRIG√âS -->
            <filter string="Terme proche (37+ SA)" name="terme_proche" domain="[('tag_semaines', '&gt;=', 37)]"/>
            <filter string="Pr√©matur√© (moins de 37 SA)" name="premature" domain="[('tag_semaines', '&lt;', 37), ('state', 'in', ['en_cours', 'a_risque'])]"/>
            <filter string="Grand pr√©matur√© (moins de 32 SA)" name="grand_premature" domain="[('tag_semaines', '&lt;', 32), ('state', 'in', ['en_cours', 'a_risque'])]"/>
            <filter string="1er trimestre (moins de 14 SA)" name="premier_trimestre" domain="[('tag_semaines', '&lt;', 14), ('state', 'in', ['en_cours', 'a_risque'])]"/>
            <filter string="2√®me trimestre (14-28 SA)" name="deuxieme_trimestre" domain="[('tag_semaines', '&gt;=', 14), ('tag_semaines', '&lt;', 28), ('state', 'in', ['en_cours', 'a_risque'])]"/>
            <filter string="3√®me trimestre (28+ SA)" name="troisieme_trimestre" domain="[('tag_semaines', '&gt;=', 28), ('state', 'in', ['en_cours', 'a_risque'])]"/>

            <group expand="0" string="Grouper par">
                <filter string="√âtat" name="group_by_state"
                        context="{'group_by': 'state'}"/>
                <filter string="Pathologie" name="group_by_pathologie"
                        context="{'group_by': 'type_pathologie_principale'}"/>
                <filter string="Niveau de risque" name="group_by_risk"
                        context="{'group_by': 'niveau_risque'}"/>
                <filter string="M√©decin r√©f√©rent" name="group_by_medecin"
                        context="{'group_by': 'medecin_referent_id'}"/>
                <filter string="Mois DPA" name="group_by_dpa_month"
                        context="{'group_by': 'date_prevue_accouchement:month'}"/>
                <filter string="Trimestre" name="group_by_trimestre"
                        context="{'group_by': 'tag_semaines'}"/>
            </group>
        </search>
    </field>
</record>

        <!-- Action pour le menu -->
